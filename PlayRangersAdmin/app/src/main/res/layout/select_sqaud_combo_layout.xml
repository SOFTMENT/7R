<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:background="@drawable/btnback"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:layout_margin="4dp"
        android:id="@+id/freefire_rl"
        android:background="@drawable/btnbackwhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/investedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:text="Invested by: 41 Players"
            android:fontFamily="@font/roboto"
            android:textSize="11sp"
            />

        <LinearLayout
            android:layout_below="@+id/investedText"
            android:id="@+id/playersll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal"
            >
            <LinearLayout

                android:layout_weight="1"
                android:layout_margin="8dp"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:id="@+id/player1"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/crick"
                    />
                <TextView
                    android:id="@+id/playerName1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dinesh Karthik"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="6dp"
                    android:fontFamily="@font/roboto"
                    android:textStyle="bold"
                    android:textColor="#4A4A49"
                    android:textSize="13sp"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:id="@+id/player2"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/crick"
                    />
                <TextView
                    android:id="@+id/playerName2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Virat Kohli"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="6dp"
                    android:fontFamily="@font/roboto"
                    android:textStyle="bold"
                    android:textColor="#4A4A49"
                    android:textSize="13sp"
                    />


            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/playersll"
            android:id="@+id/playersll2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal"
            >
            <LinearLayout

                android:layout_weight="1"
                android:layout_margin="8dp"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:id="@+id/player3"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/crick"
                    />
                <TextView
                    android:id="@+id/playerName3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dinesh Karthik"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="6dp"
                    android:fontFamily="@font/roboto"
                    android:textStyle="bold"
                    android:textColor="#4A4A49"
                    android:textSize="13sp"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:id="@+id/player4"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/crick"
                    />
                <TextView
                    android:id="@+id/playerName4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Virat Kohli"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="6dp"
                    android:fontFamily="@font/roboto"
                    android:textStyle="bold"
                    android:textColor="#4A4A49"
                    android:textSize="13sp"
                    />


            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
