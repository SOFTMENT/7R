<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:background="@drawable/btnback"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout android:layout_margin="4dp"
    android:id="@+id/freefire_rl"
    android:background="@drawable/btnbackwhite"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


        <ImageView
            android:layout_margin="8dp"
            android:id="@+id/imgTran"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:src="@drawable/freefire"
            android:layout_centerVertical="true"
            />



        <LinearLayout
            android:id="@+id/ll"
            android:gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:orientation="vertical"
            android:layout_toEndOf="@+id/imgTran"
            android:layout_centerVertical="true"
            >
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:textColor="@color/black"
                android:text="Withdraw Request"
                android:textStyle="bold"
                android:textSize="14sp"
                />



            <TextView
                android:id="@+id/orderid"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:minWidth="120dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="Order Id - 7RINDIA12282838"
                android:textSize="12sp"
                />
                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:minWidth="120dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:text="28-March-2021, 05:19 PM"
                    android:textSize="12sp"
                    />



        </LinearLayout>

    <LinearLayout
        android:layout_marginEnd="8dp"
        android:id="@+id/amtll"
        android:gravity="center_vertical"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="+200"
            android:layout_margin="4dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="@font/roboto"
            android:textColor="@color/successful"
            />
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/r7coin"
            />

    </LinearLayout>
    <TextView
        android:layout_marginBottom="4dp"
        android:layout_alignBottom="@+id/imgTran"
        android:id="@+id/isSuccessful"
        android:layout_marginEnd="8dp"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Successful"
        android:textSize="12sp"
        android:fontFamily="@font/roboto"
        android:textColor="@color/successful"
        />

</RelativeLayout>

</LinearLayout>
