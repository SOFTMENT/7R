<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:padding="15dp"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/whole_back"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD COINS "
        android:textColor="@color/white"
        android:fontFamily="@font/roboto"
        android:textSize="16sp"
        android:textStyle="bold"
        />
    <EditText
       android:maxLength="5"
        android:id="@+id/addcoinsedittext"
        android:inputType="number"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textSize="13sp"
        android:fontFamily="@font/roboto"
        android:hint="Enter Coins Quantity"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@drawable/btnback2"
        />

    <TextView
        android:visibility="gone"
        android:id="@+id/message"
        android:layout_gravity="start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 Coins x ₹1 = ₹0"
        android:layout_marginTop="10dp"
        android:textSize="13sp"
        android:fontFamily="@font/roboto"
        android:textColor="#FFEB3B"
        />

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_account_balance_wallet_24"
            />
        <TextView
            android:layout_marginStart="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coins Will be added to Deposit Wallet"
            android:textSize="13sp"
            android:fontFamily="@font/roboto"
            android:textColor="@color/white"
            />
    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/proceed"
       app:cardCornerRadius="6dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        app:cardBackgroundColor="#4CAF50"
        >

        <TextView
            android:id="@+id/proceedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto"
            android:text="Proceed To Pay"
            android:textColor="@color/white"
            android:textSize="13sp" />

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cancel"
        app:cardCornerRadius="6dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        app:cardBackgroundColor="#f00"
        >
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textSize="13sp"
            android:fontFamily="@font/roboto"
            android:textColor="@color/white"
            />

    </androidx.cardview.widget.CardView>

</LinearLayout>