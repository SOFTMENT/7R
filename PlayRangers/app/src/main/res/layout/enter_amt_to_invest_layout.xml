<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:padding="15dp"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <androidx.cardview.widget.CardView
            android:layout_weight="1"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#03A9F4"
            app:cardCornerRadius="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="5dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView

                        android:layout_centerHorizontal="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Deposited"
                        android:layout_margin="4dp"
                        android:textSize="12sp"
                        android:textColor="#fff"
                        android:fontFamily="@font/roboto"
                        />
                    <ImageView
                        android:id="@+id/info_deposit"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="4dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_outline_info_24"
                        />

                </RelativeLayout>
                <LinearLayout

                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="4dp"
                        android:src="@drawable/r7coin"
                        />
                    <TextView
                        android:id="@+id/deposit_coin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="0"
                        android:layout_margin="4dp"
                        android:textSize="16sp"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:fontFamily="@font/roboto"
                        />


                </LinearLayout>



            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_weight="1"
             app:cardElevation="4dp"
             app:cardBackgroundColor="#0F72C1"
             app:cardCornerRadius="6dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginStart="8dp"
             >
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_weight="1"
                 android:orientation="vertical"
                 android:gravity="center"
                 android:padding="5dp"
                 >
                 <RelativeLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content">
                     <TextView

                         android:layout_centerHorizontal="true"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:text="Earned"
                         android:layout_margin="4dp"
                         android:textSize="12sp"
                         android:textColor="#fff"
                         android:fontFamily="@font/roboto"
                         />
                     <ImageView
                         android:id="@+id/info_earned"
                         android:layout_width="16dp"
                         android:layout_height="16dp"
                         android:layout_alignParentEnd="true"
                         android:layout_marginEnd="4dp"
                         android:layout_centerVertical="true"
                         android:src="@drawable/ic_outline_info_24"
                         />

                 </RelativeLayout>
                 <LinearLayout
                     android:gravity="center_vertical"
                     android:orientation="horizontal"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content">
                     <ImageView

                         android:layout_width="20dp"
                         android:layout_height="20dp"
                         android:layout_marginEnd="4dp"
                         android:src="@drawable/r7coin"
                         />
                     <TextView
                         android:id="@+id/earned_coin"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:textAlignment="center"
                         android:text="0"
                         android:layout_margin="4dp"
                         android:textSize="16sp"
                         android:textColor="#fff"
                         android:textStyle="bold"
                         android:fontFamily="@font/roboto"
                         />


                 </LinearLayout>



             </LinearLayout>
         </androidx.cardview.widget.CardView>

    </LinearLayout>
    <EditText
        android:maxLength="5"
        android:id="@+id/addcoinsedittext"
        android:inputType="number"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textSize="13sp"
        android:fontFamily="@font/roboto"
        android:hint="Enter Amount To Invest"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@drawable/btnback2"
        />

    <TextView
        android:visibility="gone"
        android:id="@+id/message"
        android:layout_gravity="start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 Coins x ₹1 = ₹0"
        android:layout_marginTop="10dp"
        android:textSize="13sp"
        android:fontFamily="@font/roboto"
        android:textColor="#FFEB3B"
        />

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <TextView
            android:layout_marginStart="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* Amount can not be less than 10 coins"
            android:textSize="13sp"
            android:fontFamily="@font/roboto"
            android:textColor="#F8554A"
            />
    </LinearLayout>

    <RelativeLayout
        android:backgroundTint="#454545"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/btnback2"
        >
        <TextView
            android:textColor="#fff"
            android:textSize="13sp"
            android:id="@+id/estimatedWinningText"
            android:layout_centerVertical="true"
            android:text="Estimated Winning"
            android:fontFamily="@font/roboto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            />
        <ImageView
            android:id="@+id/estimatedWinningImg"
            android:layout_toEndOf="@+id/estimatedWinningText"
            android:layout_width="16dp"
            android:layout_height="16dp"
           android:layout_marginStart="12dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_outline_info_24"
            />

        <TextView
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_alignParentEnd="true"
            android:id="@+id/estimatedWinning"
            android:layout_centerVertical="true"
            android:text="0"
            android:fontFamily="@font/roboto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            />
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/confirm"
        app:cardCornerRadius="6dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        app:cardBackgroundColor="#4CAF50"
        >

        <TextView
            android:id="@+id/proceedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto"
            android:text="Confirm"
            android:textColor="@color/white"
            android:textSize="13sp" />

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cancel"
        app:cardCornerRadius="6dp"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        app:cardBackgroundColor="#f00"
        >
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textSize="13sp"
            android:fontFamily="@font/roboto"
            android:textColor="@color/white"
            />

    </androidx.cardview.widget.CardView>

</LinearLayout>