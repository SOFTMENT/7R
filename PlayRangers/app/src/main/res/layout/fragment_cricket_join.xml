<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/whole_back"
    android:clickable="true"
    tools:context=".Fragments.CricketShowBattleFragment"
    android:focusable="true">

    <RelativeLayout

        android:id="@+id/headerRR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/btnback">

        <RelativeLayout
            android:id="@+id/rr"
            android:padding="8dp"
            android:background="@color/white"
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout


                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    app:srcCompat="@drawable/rcblogo"
                    android:id="@+id/matchimg1"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:id="@+id/matchname1"
                    android:textSize="11sp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_below="@+id/match1"
                    android:text="RCB"
                    android:textAlignment="center"
                    android:fontFamily="@font/roboto"
                    />

            </LinearLayout>
            <LinearLayout

                android:id="@+id/middleView"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"

                android:orientation="vertical"
                >
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="INDIAN PREMIER LEAGE"
                    android:fontFamily="@font/roboto"
                    android:textSize="13sp"
                    />
                <TextView
                    android:id="@+id/date"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:text="12 APR 2021, 7:30 PM"
                    android:fontFamily="@font/roboto"
                    android:textSize="11sp"
                    />
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VS"
                    android:fontFamily="@font/roboto"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    />
                <TextView
                    android:id="@+id/timer"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:text="STARTS IN: 10:13:09"
                    android:fontFamily="@font/roboto"
                    android:textSize="11sp"
                    />
            </LinearLayout>




            <LinearLayout
                android:layout_alignParentEnd="true"


                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"

                    app:srcCompat="@drawable/csklogo"
                    android:id="@+id/matchimg2"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:id="@+id/matchname2"
                    android:textSize="11sp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_below="@+id/match1"
                    android:text="CHENNAI"
                    android:textAlignment="center"
                    android:fontFamily="@font/roboto"
                    />

            </LinearLayout>




                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/pointCalculation"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/middleView"
                    android:layout_centerHorizontal="true"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/btnback"
                    android:text="How Ponits Will calculate?"
                    android:textSize="11sp"
                    android:fontFamily="@font/roboto"
                    />


        </RelativeLayout>

    </RelativeLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/totalCollection"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_below="@+id/headerRR"
        android:layout_marginStart="16dp"
        android:background="@drawable/btnback"
        android:backgroundTint="#FFF"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:fontFamily="@font/roboto"
        android:textStyle="bold"
        android:textSize="11sp"
        android:textColor="@color/white"
        android:text="Total Prize Pool: ₹1020"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_below="@+id/headerRR"
        android:layout_marginEnd="16dp"
        android:background="@drawable/btnback"
        android:backgroundTint="#FFF"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:fontFamily="@font/roboto"
        android:textStyle="bold"
        android:textSize="11sp"
        android:textColor="@color/white"
        android:text="How To Play?"
        />


    <LinearLayout
android:visibility="gone"
        android:id="@+id/llduo"
        android:layout_width="match_parent"
        android:layout_margin="16dp"
        android:layout_below="@+id/totalCollection"
        android:layout_marginBottom="8dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/btnback">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="6dp"
            app:cardBackgroundColor="@color/white"
            android:layout_margin="4dp"
            android:padding="8dp"
            >
            <RelativeLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >


                <ImageView
                    android:layout_marginEnd="6dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/crick"
                    android:id="@+id/logoduo"
                    />

                <TextView
                    android:layout_toStartOf="@+id/pool"
                    android:id="@+id/titleduo"
                    android:layout_width="281dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_toEndOf="@+id/logoduo"
                    android:fontFamily="@font/roboto"
                    android:lines="1"
                    android:text="CRICKET BATTLE - DUO"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />


                <TextView
                    android:layout_toEndOf="@+id/logoduo"
                    android:layout_marginStart="6dp"
                    android:layout_below="@+id/titleduo"
                    android:id="@+id/availablematchduo"
                    android:layout_marginTop="4dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:minWidth="110dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:text="Active Matches - 06"
                    android:textSize="11sp"
                    />



                <LinearLayout
                android:id="@+id/pool"
                    android:layout_marginEnd="9dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp"
                    android:layout_alignParentEnd="true"
                    >

                    <TextView

                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:text="Prize Pool"
                        android:textStyle="bold"
                        android:textSize="11sp"
                        />
                    <TextView
                        android:id="@+id/prizeduo"
                        android:textColor="#4CAF50"
                        android:textStyle="bold"
                        android:gravity="end"
                        android:layout_gravity="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:text="₹270"
                        android:textSize="12sp"
                        />
                </LinearLayout>

                <RelativeLayout
                    android:layout_marginEnd="6dp"
                    android:layout_toStartOf="@+id/goduo"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="6dp"
                    android:layout_toEndOf="@+id/logoduo"
                    android:layout_below="@+id/availablematchduo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ProgressBar

                        android:progressBackgroundTint="#ECECEC"
                        android:progressTint="#2196F3"
                        android:layout_width="180dp"
                        android:layout_height="4dp"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:indeterminate="false"
                        android:max="48"
                        android:progressDrawable="@android:drawable/progress_horizontal"
                        android:progress="40"
                        android:layout_marginEnd="16dp"
                        android:id="@+id/progressbarsduo"
                        />
                    <TextView
                        android:id="@+id/totallefttextduo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/progressbarsduo"
                        android:layout_marginTop="5dp"
                        android:text="Only 60 spots left"
                        android:textSize="11sp"
                        android:fontFamily="@font/roboto"


                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/progressbarsduo"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/roboto"
                        android:textSize="11sp"
                        android:text="0/48"
                        android:id="@+id/totalduo"
                        android:layout_alignEnd="@+id/progressbarsduo"
                        />


                </RelativeLayout>
                <ImageView
                    android:src="@drawable/rightarrow2"
                    android:id="@+id/goduo"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignBottom="@+id/logoduo"
                    android:layout_marginEnd="8dp"

                    />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/lltrio"
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@+id/llduo"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/btnback">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="6dp"
            app:cardBackgroundColor="@color/white"
            android:layout_margin="4dp"
            android:padding="8dp"
            >
            <RelativeLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >


                <ImageView
                    android:layout_marginEnd="6dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/crick"
                    android:id="@+id/logotrio"
                    />

                <TextView
                    android:layout_toStartOf="@+id/pooltrio"
                    android:id="@+id/titletrio"
                    android:layout_width="281dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_toEndOf="@+id/logotrio"
                    android:fontFamily="@font/roboto"
                    android:lines="1"
                    android:text="CRICKET BATTLE - TRIO"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />


                <TextView
                    android:layout_toEndOf="@+id/logotrio"
                    android:layout_marginStart="6dp"
                    android:layout_below="@+id/titletrio"
                    android:id="@+id/availablematchtrio"
                    android:layout_marginTop="4dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:minWidth="110dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:text="Active Matches - 06"
                    android:textSize="11sp"
                    />



                <LinearLayout
                    android:id="@+id/pooltrio"
                    android:layout_marginEnd="9dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp"
                    android:layout_alignParentEnd="true"
                    >

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:text="Prize Pool"
                        android:textStyle="bold"
                        android:textSize="11sp"
                        />
                    <TextView
                        android:id="@+id/prizetrio"
                        android:textColor="#4CAF50"
                        android:textStyle="bold"
                        android:gravity="end"
                        android:layout_gravity="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:text="₹270"
                        android:textSize="12sp"
                        />
                </LinearLayout>

                <RelativeLayout
                    android:layout_marginEnd="6dp"
                    android:layout_toStartOf="@+id/gotrio"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="6dp"
                    android:layout_toEndOf="@+id/logotrio"
                    android:layout_below="@+id/availablematchtrio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ProgressBar

                        android:progressBackgroundTint="#ECECEC"
                        android:progressTint="#2196F3"
                        android:layout_width="180dp"
                        android:layout_height="4dp"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:indeterminate="false"
                        android:max="48"
                        android:progressDrawable="@android:drawable/progress_horizontal"
                        android:progress="40"
                        android:layout_marginEnd="16dp"
                        android:id="@+id/progressbarstrio"
                        />
                    <TextView
                        android:id="@+id/totallefttexttrio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/progressbarstrio"
                        android:layout_marginTop="5dp"
                        android:text="Only 60 spots left"
                        android:textSize="11sp"
                        android:fontFamily="@font/roboto"


                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/progressbarstrio"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/roboto"
                        android:textSize="11sp"
                        android:text="0/48"
                        android:id="@+id/totaltrio"
                        android:layout_alignEnd="@+id/progressbarstrio"
                        />


                </RelativeLayout>
                <ImageView
                    android:src="@drawable/rightarrow2"
                    android:id="@+id/gotrio"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignBottom="@+id/logotrio"
                    android:layout_marginEnd="8dp"

                    />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/llsquad"
        android:layout_width="match_parent"
        android:layout_margin="16dp"
        android:layout_below="@+id/lltrio"
        android:layout_marginBottom="8dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/btnback">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="6dp"
            app:cardBackgroundColor="@color/white"
            android:layout_margin="4dp"
            android:padding="8dp"
            >
            <RelativeLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >


                <ImageView
                    android:layout_marginEnd="6dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/crick"
                    android:id="@+id/logosquad"
                    />

                <TextView
                    android:layout_toStartOf="@+id/poolsquad"
                    android:id="@+id/titlesquad"
                    android:layout_width="281dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_toEndOf="@+id/logosquad"
                    android:fontFamily="@font/roboto"
                    android:lines="1"
                    android:text="CRICKET BATTLE - SQUAD"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />


                <TextView
                    android:layout_toEndOf="@+id/logosquad"
                    android:layout_marginStart="6dp"
                    android:layout_below="@+id/titlesquad"
                    android:id="@+id/availablematchsquad"
                    android:layout_marginTop="4dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:minWidth="110dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:text="Active Matches - 06"
                    android:textSize="11sp"
                    />



                <LinearLayout
                    android:id="@+id/poolsquad"
                    android:layout_marginEnd="9dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp"
                    android:layout_alignParentEnd="true"
                    >

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:text="Prize Pool"
                        android:textStyle="bold"
                        android:textSize="11sp"
                        />
                    <TextView
                        android:id="@+id/prizesquad"
                        android:textColor="#4CAF50"
                        android:textStyle="bold"
                        android:gravity="end"
                        android:layout_gravity="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:text="₹270"
                        android:textSize="12sp"
                        />
                </LinearLayout>

                <RelativeLayout
                    android:layout_marginEnd="6dp"
                    android:layout_toStartOf="@+id/go"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="6dp"
                    android:layout_toEndOf="@+id/logosquad"
                    android:layout_below="@+id/availablematchsquad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ProgressBar

                        android:progressBackgroundTint="#ECECEC"
                        android:progressTint="#2196F3"
                        android:layout_width="180dp"
                        android:layout_height="4dp"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:indeterminate="false"
                        android:max="48"
                        android:progressDrawable="@android:drawable/progress_horizontal"
                        android:progress="40"
                        android:layout_marginEnd="16dp"
                        android:id="@+id/progressbarssquad"
                        />
                    <TextView
                        android:id="@+id/totallefttextSquad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/progressbarssquad"
                        android:layout_marginTop="5dp"
                        android:text="Only 60 spots left"
                        android:textSize="11sp"
                        android:fontFamily="@font/roboto"


                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/progressbarssquad"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/roboto"
                        android:textSize="11sp"
                        android:text="0/48"
                        android:id="@+id/totalSquad"
                        android:layout_alignEnd="@+id/progressbarssquad"
                        />


                </RelativeLayout>
                <ImageView
                    android:src="@drawable/rightarrow2"
                    android:id="@+id/go"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignBottom="@+id/logosquad"
                    android:layout_marginEnd="8dp"

                    />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>



