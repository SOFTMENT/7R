<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="@color/whole_back"
    android:clickable="true"
    android:focusable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.WalletFragment">


 <LinearLayout
     android:orientation="vertical"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     >
     <LinearLayout
         android:background="#fff"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:weightSum="3"
         >
         <androidx.cardview.widget.CardView
             app:cardElevation="4dp"
             app:cardBackgroundColor="#03A9F4"
             app:cardCornerRadius="6dp"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:layout_marginTop="10dp"
             android:layout_marginBottom="10dp"
             android:layout_marginStart="5dp"
             android:layout_marginEnd="5dp"
             >
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_weight="1"
                 android:orientation="vertical"
                 android:gravity="center"
                 android:padding="5dp"
                 >
                 <RelativeLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content">
                 <TextView

                     android:layout_centerHorizontal="true"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="Deposited"
                     android:layout_margin="4dp"
                     android:textSize="12sp"
                     android:textColor="#fff"
                     android:fontFamily="@font/roboto"
                     />
                     <ImageView
                         android:id="@+id/info_deposit"
                         android:layout_width="16dp"
                         android:layout_height="16dp"
                         android:layout_alignParentEnd="true"
                         android:layout_marginEnd="4dp"
                         android:layout_centerVertical="true"
                         android:src="@drawable/ic_outline_info_24"
                         />

                 </RelativeLayout>
                 <LinearLayout

                     android:gravity="center_vertical"
                     android:orientation="horizontal"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content">
                     <ImageView
                         android:layout_width="20dp"
                         android:layout_height="20dp"
                         android:layout_marginEnd="4dp"
                         android:src="@drawable/r7coin"
                         />
                     <TextView
                         android:id="@+id/deposit_coin"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:textAlignment="center"
                         android:text="0"
                         android:layout_margin="4dp"
                         android:textSize="16sp"
                         android:textColor="#fff"
                         android:textStyle="bold"
                         android:fontFamily="@font/roboto"
                         />


                 </LinearLayout>



             </LinearLayout>
         </androidx.cardview.widget.CardView>

         <androidx.cardview.widget.CardView
             app:cardElevation="4dp"
             app:cardBackgroundColor="#0F72C1"
             app:cardCornerRadius="6dp"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:layout_marginTop="10dp"
             android:layout_marginBottom="10dp"
             android:layout_marginStart="5dp"
             android:layout_marginEnd="5dp"
             >
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_weight="1"
                 android:orientation="vertical"
                 android:gravity="center"
                 android:padding="5dp"
                 >
                 <RelativeLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content">
                     <TextView

                         android:layout_centerHorizontal="true"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:text="Earned"
                         android:layout_margin="4dp"
                         android:textSize="12sp"
                         android:textColor="#fff"
                         android:fontFamily="@font/roboto"
                         />
                     <ImageView
                         android:id="@+id/info_earned"
                         android:layout_width="16dp"
                         android:layout_height="16dp"
                         android:layout_alignParentEnd="true"
                         android:layout_marginEnd="4dp"
                         android:layout_centerVertical="true"
                         android:src="@drawable/ic_outline_info_24"
                         />

                 </RelativeLayout>
                 <LinearLayout
                     android:gravity="center_vertical"
                     android:orientation="horizontal"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content">
                     <ImageView

                         android:layout_width="20dp"
                         android:layout_height="20dp"
                         android:layout_marginEnd="4dp"
                         android:src="@drawable/r7coin"
                         />
                     <TextView
                         android:id="@+id/earned_coin"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:textAlignment="center"
                         android:text="0"
                         android:layout_margin="4dp"
                         android:textSize="16sp"
                         android:textColor="#fff"
                         android:textStyle="bold"
                         android:fontFamily="@font/roboto"
                         />


                 </LinearLayout>



             </LinearLayout>
         </androidx.cardview.widget.CardView>
         <LinearLayout
             android:layout_marginStart="5dp"
             android:layout_marginTop="10dp"
             android:layout_marginBottom="10dp"
             android:layout_marginEnd="10dp"
             android:orientation="vertical"
             android:weightSum="2"
             android:layout_width="0dp"
             android:layout_weight="1"
             android:layout_height="match_parent"
             >
         <androidx.cardview.widget.CardView
             app:cardBackgroundColor="#EC407A"
             android:layout_weight="1"
             app:cardElevation="4dp"
             app:cardCornerRadius="6dp"
             android:layout_width="match_parent"
             android:layout_height="0dp"
             android:layout_marginBottom="3dp"

             >
             <LinearLayout
                 android:id="@+id/addcoin"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_weight="1"
                 android:orientation="horizontal"
                android:padding="5dp"
                 >

                 <ImageView
                     android:layout_width="20dp"
                     android:layout_height="20dp"
                     android:layout_marginEnd="4dp"
                     android:src="@drawable/ic_baseline_add_circle_outline_24"
                     />
                 <TextView
                     android:layout_gravity="center"
                     android:layout_marginStart="6dp"
                     android:textColor="#fff"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="Add Coins"
                     android:textSize="12sp"
                     android:fontFamily="@font/roboto"
                     />


             </LinearLayout>





         </androidx.cardview.widget.CardView>
             <androidx.cardview.widget.CardView
                 android:layout_marginTop="3dp"
                 app:cardBackgroundColor="#26A69A"
                 android:layout_weight="1"
                 app:cardElevation="4dp"
                 app:cardCornerRadius="6dp"
                 android:layout_width="match_parent"
                 android:layout_height="0dp"
                >
                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:layout_weight="1"
                     android:orientation="vertical"
                     android:gravity="center"
                     android:padding="5dp"
                     >         <LinearLayout
                     android:gravity="center_vertical"
                     android:orientation="horizontal"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content">
                     <ImageView
                         android:layout_width="20dp"
                         android:layout_height="20dp"
                         android:layout_marginEnd="4dp"
                         android:src="@drawable/withdraw"
                         />
                     <TextView

                         android:layout_marginStart="6dp"
                         android:textColor="#fff"
                         android:layout_gravity="center"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:text="Withdraw"
                         android:textSize="12sp"
                         android:fontFamily="@font/roboto"
                         />


                 </LinearLayout>



                 </LinearLayout>




             </androidx.cardview.widget.CardView>
         </LinearLayout>
     </LinearLayout>

     <LinearLayout
         android:layout_marginTop="4dp"
         android:id="@+id/topButtonsView"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:weightSum="3"
         android:padding="8dp"
         >
         <androidx.appcompat.widget.AppCompatButton
             android:id="@+id/all"
             android:textSize="12sp"
             android:fontFamily="@font/roboto"
             android:text="All"
             android:layout_marginEnd="6dp"
             android:layout_width="0dp"
             android:layout_height="40dp"
             android:layout_weight="1"
             android:background="@drawable/btnbackred"
             android:textColor="#fff"
             />
         <androidx.appcompat.widget.AppCompatButton
             android:id="@+id/debit"
             android:textSize="12sp"
             android:textColor="#fff"
             android:fontFamily="@font/roboto"
             android:text="Debit"
             android:layout_marginStart="6dp"
             android:layout_width="0dp"
             android:layout_height="40dp"
             android:layout_weight="1"
             android:background="@drawable/btnback"
             android:layout_marginEnd="6dp"
             />

         <androidx.appcompat.widget.AppCompatButton
             android:id="@+id/credit"
             android:textSize="12sp"
             android:textColor="#fff"
             android:fontFamily="@font/roboto"
             android:text="Credit"
             android:layout_marginStart="6dp"
             android:layout_width="0dp"
             android:layout_height="40dp"
             android:layout_weight="1"
             android:background="@drawable/btnback"
             />
     </LinearLayout>

     <in.softment.playrangers.Utils.NonSwipeAbleViewPager
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:id="@+id/viewPager"
         />



 </LinearLayout>
  <com.airbnb.lottie.LottieAnimationView
       android:background="@color/whole_back"
       android:id="@+id/animation_view"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:visibility="gone"
       app:lottie_rawRes="@raw/successful_payment"
       app:lottie_loop="true"
       app:lottie_autoPlay="true" />


</RelativeLayout>