                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    >


                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/polloption_a_text"
                        android:layout_alignBottom="@+id/polloption_a_text"
                        android:weightSum="100"
                        android:orientation="horizontal">

                        <View

                            android:id="@+id/polloption_a_view"
