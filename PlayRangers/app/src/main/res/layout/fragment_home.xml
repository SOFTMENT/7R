                        android:id="@+id/rb1"
                        android:fontFamily="@font/roboto"
                        android:textSize="14sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Flora"

                        />
                    <RadioButton
                        android:textColor="#757575"
                        android:id="@+id/rb2"
                        android:layout_marginTop="-8dp"
                        android:fontFamily="@font/roboto"
                        android:textSize="14sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
