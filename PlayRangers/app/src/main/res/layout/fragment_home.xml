                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today's Poll"
                android:layout_marginStart="8dp"
                android:textSize="18sp"
                android:fontFamily="@font/roboto"
                />
        </RelativeLayout>

        <LinearLayout
