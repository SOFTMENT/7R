                        android:id="@+id/count"
                        android:textSize="11sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:text="1024 Votes"


                        />

            </RelativeLayout>
            <LinearLayout
