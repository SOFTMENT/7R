                    </LinearLayout>

                    <TextView
                        android:id="@+id/polloption_a_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/polloption_a_score"
                        android:padding="10dp"
                        android:text="Flora"
                        android:fontFamily="@font/roboto"
                        />

                    <TextView

                        android:id="@+id/polloption_a_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:padding="10dp"
                        android:text="58%"
                       android:fontFamily="@font/roboto"
                        android:textSize="13sp"
                        />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"

                    >


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/polloption_b_text"
                        android:layout_alignBottom="@+id/polloption_b_text"
                        android:weightSum="100"
                        android:orientation="horizontal">

                        <View
                            android:id="@+id/polloption_b_view"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="42"
                            android:background="@drawable/pollprogressback"/>

                    </LinearLayout>

                    <TextView

                        android:id="@+id/polloption_b_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Flora"
                        android:fontFamily="@font/roboto"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/polloption_b_score"

                        />

                    <TextView
                        android:fontFamily="@font/roboto"
                        android:id="@+id/polloption_b_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:padding="10dp"
                        android:textSize="13sp"
                        android:text="42%"
                        />

                </RelativeLayout>


            </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
