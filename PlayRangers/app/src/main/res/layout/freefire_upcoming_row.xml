<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="8dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/btnback"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp"
        app:cardBackgroundColor="@color/white"
        android:layout_margin="4dp"
        android:padding="8dp"
        >
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <ImageView
        android:id="@+id/see"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/eye"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/logo"
        android:layout_marginEnd="8dp"
        />
        <ImageView

            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:src="@drawable/freefire"
            android:id="@+id/logo"
            />

    <TextView
        android:layout_alignTop="@+id/logo"
        android:id="@+id/title"
        android:layout_width="281dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@+id/see"
        android:layout_toEndOf="@+id/logo"
        android:fontFamily="@font/roboto"
        android:lines="1"
        android:text="Squad Battle(3) - Match #784"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold" />
        <TextView
            android:layout_alignBottom="@+id/logo"
            android:layout_marginBottom="6dp"
            android:layout_alignStart="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:fontFamily="@font/roboto"
            android:id="@+id/time"
            android:text="Time: 31-March-2020 at 11:00 PM"
            />

        <LinearLayout
            android:layout_marginEnd="4dp"
            android:layout_marginTop="10dp"
            android:weightSum="3"
            android:orientation="horizontal"
            android:id="@+id/onerow"
            android:layout_below="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_marginStart="8dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                app:cardCornerRadius="6dp"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                app:cardBackgroundColor="#fff"
                android:layout_height="50dp">
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="WIN PRIZE"
                        android:textSize="13sp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:fontFamily="@font/roboto"
                        android:layout_marginBottom="2dp"
                        />
                    <TextView
                        android:layout_marginTop="2dp"
                        android:id="@+id/winprizetext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1000/- Rs"
                        android:textSize="13sp"
                        android:textAlignment="center"
                        android:fontFamily="@font/roboto"
                        android:textColor="@color/black"
                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginStart="8dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                app:cardCornerRadius="6dp"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                app:cardBackgroundColor="#fff"
                android:layout_height="50dp">
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="PER KILL"
                        android:textSize="13sp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:fontFamily="@font/roboto"
                        android:layout_marginBottom="2dp"
                        />
                    <TextView
                        android:layout_marginTop="2dp"
                        android:id="@+id/perkilltext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="25/- Rs"
                        android:textSize="13sp"
                        android:textAlignment="center"
                        android:fontFamily="@font/roboto"
                        android:textColor="@color/black"
                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginStart="8dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                app:cardCornerRadius="6dp"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                app:cardBackgroundColor="#fff"
                android:layout_height="50dp">
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="ENTRY FEE"
                        android:textSize="13sp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:fontFamily="@font/roboto"
                        android:layout_marginBottom="2dp"
                        />
                    <TextView
                        android:layout_marginTop="2dp"
                        android:id="@+id/entryfeestext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="50/- Rs"
                        android:textSize="13sp"
                        android:textAlignment="center"
                        android:fontFamily="@font/roboto"
                        android:textColor="@color/black"
                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    <LinearLayout
        android:layout_marginEnd="4dp"
        android:weightSum="3"
        android:orientation="horizontal"
        android:id="@+id/tworow"
        android:layout_below="@+id/onerow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_marginStart="8dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            app:cardCornerRadius="6dp"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            app:cardBackgroundColor="#fff"
            android:layout_height="50dp">
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="TYPE"
                    android:textSize="13sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto"
                    android:layout_marginBottom="2dp"
                    />
                <TextView
                    android:layout_marginTop="2dp"
                    android:id="@+id/typetext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Duo"
                    android:textSize="13sp"
                    android:textAlignment="center"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/black"
                    />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginStart="8dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            app:cardCornerRadius="6dp"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            app:cardBackgroundColor="#fff"
            android:layout_height="50dp">
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="VERSION"
                    android:textSize="13sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto"
                    android:layout_marginBottom="2dp"
                    />
                <TextView
                    android:layout_marginTop="2dp"
                    android:id="@+id/versiontext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TPP"
                    android:textSize="13sp"
                    android:textAlignment="center"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/black"
                    />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginStart="8dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            app:cardCornerRadius="6dp"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            app:cardBackgroundColor="#fff"
            android:layout_height="50dp">
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="MAP"
                    android:textSize="13sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto"
                    android:layout_marginBottom="2dp"
                    />

                <TextView
                    android:layout_marginTop="2dp"
                    android:id="@+id/maptext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Erangle"
                    android:textSize="13sp"
                    android:textAlignment="center"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/black"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
        <RelativeLayout
            android:layout_margin="8dp"
            android:layout_below="@+id/tworow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ProgressBar
                android:progressBackgroundTint="#ECECEC"
                android:progressTint="#2196F3"
                android:layout_width="180dp"
                android:layout_height="4dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:indeterminate="false"
                android:max="48"
                android:progressDrawable="@android:drawable/progress_horizontal"
                android:progress="40"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="16dp"
                android:id="@+id/progressbars"
                />
            <TextView
                android:id="@+id/totallefttext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/progressbars"
                android:layout_marginTop="5dp"
                android:text="Only 60 spots left"
                android:textSize="12sp"
               android:fontFamily="@font/roboto"


                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/progressbars"
                android:layout_marginTop="5dp"
               android:fontFamily="@font/roboto"
                android:textSize="12sp"
                android:text="0/48"
                android:id="@+id/total"
                android:layout_alignEnd="@+id/progressbars"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/joinbutton"
                android:layout_width="90dp"
                android:layout_height="36dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/buttonbackgreen"
                android:text="JOIN"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
               android:fontFamily="@font/roboto"
                />

        </RelativeLayout>

    </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>

